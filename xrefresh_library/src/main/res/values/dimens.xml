    <declare-styleable name="AppToolbar">
        <attr name="tb_title" format="string|reference" />
        <attr name="tb_text_menu_string" format="string|reference" />
        <attr name="tb_src_menu_fir" format="reference" />
        <attr name="tb_src_menu_sec" format="reference" />
        <attr name="tb_enable_back" format="boolean" />
        <attr name="tb_new_standard" format="boolean" />
        <attr name="tb_src_menu_padding" format="dimension" />
        <attr name="tb_transparent" format="boolean" />
        <attr name="tb_src_menu_layout_padding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LoadMoreRecyclerView">
        <attr name="recLayoutManager" format="enum">
            <enum name="linear" value="0" />
            <enum name="grid" value="1" />
        </attr>
        <attr name="recSpan" format="integer" />
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="load_in_transparent" format="boolean" />
        <attr name="load_new_standard" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RefreshLoadMoreView">
        <attr name="defaultDivider" format="boolean" />
        <attr name="rlm_new_standard" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension" value="300.0dp" />
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference" />
        <attr name="shadow_right" format="reference" />
        <attr name="shadow_bottom" format="reference" />
    </declare-styleable>
    <declare-styleable name="SwipeRefreshView">
        <attr name="scrollableChildId" format="reference" />
    </declare-styleable>
    <declare-styleable name="itemSelectView">
        <attr name="itemSelectViewTitle" format="string" />
        <attr name="itemSelectViewIconRes" format="reference" />
    </declare-styleable>
    <declare-styleable name="passwordView">
        <attr name="textColor" format="color|reference" />
        <attr name="textSize" format="dimension" />
        <attr name="lineColor" format="color" />
        <attr name="gridColor" format="color" />
        <attr name="lineWidth" format="dimension" />
        <attr name="passwordLength" format="integer" />
        <attr name="passwordTransformation" format="string" />
        <attr name="passwordType" format="enum">
            <enum name="numberPassword" value="0" />
            <enum name="textPassword" value="1" />
            <enum name="textVisiblePassword" value="2" />
            <enum name="textWebPassword" value="3" />
        </attr>
    </declare-styleable>


    <style name="Button_3_0_White">
        <item name="android:background">@drawable/lib_btn_white_3_0</item>
        <item name="android:textColor">@color/tv_3_0_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LibUiCancelButton" parent="LibUiNewButtonStyle">
        <item name="android:background">@drawable/btn_gray_3_0</item>
        <item name="android:textColor">@color/text_content_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LibUiNewButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LibUiAcceptButton" parent="LibUiNewButtonStyle">
        <item name="android:background">@drawable/btn_gray_3_0</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Layout" />

    <style name="Layout.Clickable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_white_gray_selector</item>
    </style>

    <style name="TextView" />

    <style name="TextView.Grey_14sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#5C5C5C</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Grey_14sp.inputView">
        <item name="android:layout_weight">3.2</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_height">@dimen/h_36</item>
        <item name="android:layout_margin">@dimen/w_5</item>
        <item name="android:paddingLeft">@dimen/global_padding</item>
        <item name="android:paddingRight">@dimen/global_padding</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <string name="accept">确定</string>
    <string name="cancel">取消</string>
    <string name="net_error">当前网络不可用，请检查网络后重试</string>
    <string name="net_failure">当前网络繁忙，请稍后重试</string>
    <string name="net_no_data">没有数据</string>
    <string name="net_no_net">当前网络不可用，请检查网络后重试</string>
    <string name="net_time_out">当前网络繁忙，请稍后重试</string>

</resources>
